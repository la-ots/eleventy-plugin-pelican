<ol class="breadcrumb">
  <li class="breadcrumb-item">
    <a href="{{ params.home.url | default('/', true) }}">
      <span class="fas fa-home mr-1 me-1" aria-hidden="true"></span>
      <span class="sr-only">{{ params.home.text | default('Home', true) }}</span>
    </a>
  </li>
  {%- for entry in params.entries -%}
    {%- if entry.url == params.currentPage.url -%}
      <li class="breadcrumb-item active" aria-current="page">
        <span>{{ entry.title }}</span> <span class="fas fa-eye ml-1 ms-1" aria-hidden="true"></span>
      </li>
    {%- elif entry.url in params.currentPage.url -%}
      {%- if entry.children.length > 0 -%}
        <li class="breadcrumb-item">
          <a href="{{ entry.url | url }}">
            {{ entry.title }}
          </a>
        </li>
        {%- for child in entry.children -%}
          {%- if child.url == params.currentPage.url -%}
            <li class="breadcrumb-item active" aria-current="page">
              {{ child.title }} <span class="fas fa-eye" aria-hidden="true"></span>
            </li>
          {%- endif -%}
        {%- endfor -%}
      {%- endif -%}
    {%- endif -%}
  {%- endfor -%}
</ol>
