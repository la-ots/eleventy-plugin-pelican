<nav class="breadcrumb-wrapper" aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <a href="{{ params.home.url | default('/') }}">
        <span class="fas fa-home" aria-hidden="true"></span>
        <span class="sr-only">{{ params.home.text | default('Home') }}</span>
      </a>
    </li>
    {%- for entry in params.entries -%}
      {%- if entry.url == params.currentPage.url -%}
        <li class="breadcrumb-item active" aria-current="page">
          {{ entry.title }} <span class="fas fa-eye" aria-hidden="true"></span>
        </li>
      {%- elif entry.url in params.currentPage.url -%}
        {%- if entry.children.length > 0 -%}
          <li class="breadcrumb-item">
            <a href="{{ entry.url | url }}">
              {{ entry.title }}
            </a>
          </li>
          {%- for child in entry.children -%}
            {%- if child.url == params.currentPage.url -%}
              <li class="breadcrumb-item active" aria-current="page">
                {{ child.title }} <span class="fas fa-eye" aria-hidden="true"></span>
              </li>
            {%- endif -%}
          {%- endfor -%}
        {%- endif -%}
      {%- endif -%}
    {%- endfor -%}
  </ol>
</nav>